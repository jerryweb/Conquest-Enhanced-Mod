{game_entity
	(include "/properties/cannon.ext")
	
	{extension "regel_bau_76mm_zis3.mdl"}
	{props "wheeled" "vision_lev03_can" "muzzle_75mm_76mm_sides" "cannon_sandbag_small" "detect_atgun" "c_gun_lite"}
	{targetclass "cannon_big"}
	{targetSelector "cannon_big"}

	("wheel" args "wheelright")
	("wheel" args "wheelleft")

	("gun" repair(30) thickness(25))
	("shield" args "shield" 8)
	("shield" args "shield_lower" 8)
	("shield" args "shield_gun" 8)

	("armor_medium_cannon")
	("crew_wheeled_cannon_4")

	{volume "shield" {able {holed}}}

	{boarder
		{anm "gunner"
			{forward {end "pose_new_cannon_gunner_fire" 10}}
		}
		{anm "charger"
			{forward {end "pose_new_cannon_charger_fire" 10}}
		}
		{anm "charger2"
			{forward {end "pose_new_cannon_charger2_fire" 10}}
		}
		{anm "commander"
			{forward {end "pose_new_cannon_commander_fire" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"	;// charger
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "driver3"	;// charger2
			{forward {end "mortar_driver_l" 10}}
		}
		{anm "driver4"	;// commander
			{forward {end "mgun_browning_driver_r" 10}}
		}
		{anm "seat1"	;// gunner
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat2"	;// charger
			{forward {end "pose_seat_cannon_right" 10}}
		}
		{anm "seat3"	;// charger2
			{forward {end "pose_seat_cannon_right" 10}}
		}
		{anm "seat4"	;// commander
			{forward {end "pose_seat_cannon_left" 10}}
		}
	}
	    {placer
        {place "driver1" remove}
        {place "driver2" remove}
        {place "driver3" remove}
        {place "driver4" remove}
    }
    {extender "cannon"
        {animation
            {switch "close"}
            ;// "gunner" "charger" "charger2" "commander"
            {move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right" "mortar_driver_l" "mgun_browning_driver_r" }
            {aim "cannon_small_gunner_aim" "cannon_small_charger_aim" "cannon_small_charger2_aim" ""}
            {fire "cannon_small_gunner_fire" "cannon_small_charger_fire" "cannon_small_charger2_fire" "new_cannon_commander_fire"}
            {reload "cannon_small_gunner_reload" "cannon_small_charger_reload" "cannon_small_charger2_reload" ""}
        }
              {move {workers clear} {obstacle "close"}}
        {attack {obstacle "open"}}
        {rotate_ik_Limit 25}        ;// move state: cannon being pushed and which positions play animations
        {attack {workers "gunner" "charger" "charger2" "commander"} {obstacle "open"}}        ;// fire/attack state: cannon aim, fire, and reload events
        {trailing {workers "seat1" "seat2" "seat3" "seat4"}}                                ;// trailing state: cannon is being towed {obstacle} not needed. Uses "close"
    }

	{extender "inventory"
		{box
			{item "bulletrus_76 aphebc2" 20}		;50 rounds
			{item "bulletrus_76 he" 25}
			{item "bulletrus_76 heat" 5}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "76mm_zis3" filling "bulletrus_76 aphebc2" 1}
			{charger "charger charger2" minWorkers 1}
			("abm_dymamic_gun"
				zeroing(2.0)
				dispersion(0.35)
			)
		}
	}

	{mass 1092}
	{Chassis "track"
		("car_trace" fx("tracewheel05a") step(0.14) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility_cannon"
			speed(6.8) ;----------------------------------Max speed.
			weight(1092) ;--------------------------------Weight in Kilograms.
		)
	}

	{bone "basis"
